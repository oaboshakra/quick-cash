<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:ignore="ExtraText">

    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_profile_placeholder"
        tools:ignore="MissingConstraints" /> // Replace with your placeholder image.
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/imageViewProfile"
        app:layout_constraintTop_toTopOf="@id/imageViewProfile"/>

    <TextView
        android:id="@+id/textViewPreviousEmployer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Previous Employee"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/textViewName"
        app:layout_constraintStart_toStartOf="@id/textViewName"/>

    <TextView
        android:id="@+id/textViewProfession"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Profession"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/textViewPreviousEmployer"
        app:layout_constraintStart_toStartOf="@id/textViewName"/>

    <Button
        android:id="@+id/buttonRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate"
        app:layout_constraintTop_toTopOf="@id/imageViewProfile"
        app:layout_constraintBottom_toBottomOf="@id/imageViewProfile"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
