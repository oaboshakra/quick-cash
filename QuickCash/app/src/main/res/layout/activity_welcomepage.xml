<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.home.WelcomePage">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:title="Welcome Page"
        app:titleTextColor="@color/white" />

    <!-- Content Layout -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Nithish"
            android:textAlignment="center"
            android:textSize="24sp"

            android:layout_marginTop="20dp"/>

        <!-- Employer Text -->
        <TextView
            android:id="@+id/ifEmployerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer?"
            android:textSize="18sp"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"/>

        <!-- Post Job Button -->
        <Button
            android:id="@+id/postJobButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post a Job"
            android:textSize="16sp"
            android:textColor="@color/white"

            android:elevation="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <!-- Employee Text -->
        <TextView
            android:id="@+id/elseText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employee?"
            android:textSize="18sp"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />

        <!-- Job Search Button -->
        <Button
            android:id="@+id/jobSearchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find a Job"
            android:textSize="16sp"
            android:textColor="@color/white"

            android:elevation="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
