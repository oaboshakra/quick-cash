<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".ui.employerProfile.EmployerProfile">

    <!-- Industry Type -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/industryType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="visible"> <!-- Added -->

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/industryTypeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Industry Type"
            android:inputType="text"/> <!-- Added -->

    </com.google.android.material.textfield.TextInputLayout>

    <!-- ID Number -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/idNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="visible"> <!-- Added -->

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/idNumTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Num"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Phone Number -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="visible"> <!-- Added -->

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneNumTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="number" /> <!-- Used to be "numberDecimal -->

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Hiring Status -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/hiringStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:visibility="visible">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/hiringStatusTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hiring Status (Yes/No)"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>


    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:text="Save" />

</LinearLayout>