    <!-- Job Name -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilJobName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etJobName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job Name" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Hours Required -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilHoursRequired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etHoursRequired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hours Required"
            android:inputType="number" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Hourly Wage -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilHourlyWage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etHourlyWage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hourly Wage (in dollars)"
            android:inputType="numberDecimal" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Skills Needed -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilSkillsNeeded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etSkillsNeeded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Skills Needed" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Create Job Button -->
    <Button
        android:id="@+id/btnCreateJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Job" />

</LinearLayout>
